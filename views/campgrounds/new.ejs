<% layout('layouts/boilerplate') %>
<form action="/campgrounds" method="POST">
    <div>
        <label for="title">Title: </label>
        <!-- Below is how we can group content together, in the request.body we can access title in the campground dictionary -->
        <input type="text" name="campground[title]" id="title">
    </div>
    <div>
        <label for="location">Location: </label>
        <input type="text" name="campground[location]" id="location">
    </div>
    <button>Add Campground</button>
</form>
<a href="/campgrounds">All Campgrounds</a>