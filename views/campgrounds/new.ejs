<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <!-- offset is to center the column as we have col 6 so we can offset it to 3 -->
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title: </label>
                <!-- Below is how we can group content together, in the request.body we can access title in the campground dictionary -->
                <input class="form-control" type="text" name="campground[title]" id="title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url: </label>
                <input class="form-control" type="text" name="campground[image]" id="image">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price: </label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" type="text" name="campground[price]"  class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>